@model IEnumerable<WebsiteBanHangQuanAoNam.Models.Chucvu>

@{
    ViewData["Title"] = "Index";
}

<h1>QL Chức Vụ</h1>

<p>
    <a asp-action="Create">Thêm chức vụ</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeSo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ten)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeSo)
            </td>
            <td>
                <a Class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.MaCv">Sửa</a> |
                <a Class="btn btn-outline-primary " asp-action="Details" asp-route-id="@item.MaCv">Thông Tin</a> |
                <a Class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.MaCv">xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
