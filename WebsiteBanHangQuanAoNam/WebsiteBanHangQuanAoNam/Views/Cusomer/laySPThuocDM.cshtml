@model ShopVanPhongPham.Models.Mathang[]

@{
    ViewData["Title"] = "laySPThuocDM";
}

<div class="px-4 px-lg-5 mt-1">
    <h3 class="text-black">Danh mục @ViewBag.tendanhmuc</h3>
    <div />
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col mb-5">
                <div class="card h-100">
                    <!-- Sale badge-->
                    <div class="badge bg-danger text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Giảm giá</div>
                    <!-- Product image-->
                    <img class="card-img-top" src="~/images/products/@Html.DisplayFor(mbox=>item.HinhAnh)" alt="..." />
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
                            <h5 class="fw-bolder text-black">@Html.DisplayFor(mbox => item.Ten)</h5>
                            <!-- Product reviews-->
                            <div class="d-flex justify-content-center small text-warning mb-2">
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star-fill"></div>
                                <div class="bi-star"></div>
                            </div>
                            <!-- Product price-->
                            <span class="text-muted text-decoration-line-through">@Html.DisplayFor(mbox => item.GiaGoc)</span>
                            <span class="text-danger fw-bolder">@Html.DisplayFor(mbox => item.GiaBan)</span>
                        </div>
                    </div>
                    <!-- Product actions-->
                    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                        <div class="text-center">
                            <a class="btn btn-outline-info mt-auto" asp-controller="Cusomer" asp-action="themSanPhamVaoGioHang" asp-route-id="@item.MaMh">Chọn mua</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @* thanh so thu tu *@
    <ul class="pagination justify-content-center" style="margin:20px 0">
        <li class="page-item"><a class="page-link" href="#"><i class="bi bi-caret-left-fill"></i></a></li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#"><i class="bi bi-caret-right-fill"></i></a></li>
    </ul>

