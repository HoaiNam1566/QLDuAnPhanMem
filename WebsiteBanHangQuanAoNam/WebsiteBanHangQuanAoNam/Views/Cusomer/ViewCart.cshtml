
@{
    ViewData["Title"] = "ViewCart";
}
<h3>Giỏ hàng của bạn</h3>

@if (Model.Count > 0)
{
    int stt = 1;        // Số thứ tự
    int thanhtien = 0;  // Thành tiền
    int tongtien = 0;   // Tổng tiền

    <table class="table">
        <thead>
            <tr>
                <th>STT</th>
                <th>Sản phẩm</th>
                <th>Giá</th>
                <th>Số lượng</th>
                <th>Thành tiền</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                thanhtien = i.MatHang.GiaBan * (i.SoLuong ?? 1);
                tongtien += thanhtien;
                <tr class="align-middle">
                    <td>@(stt++)</td>
                    <td>
                        <img src="~/images/products/@(i.MatHang.HinhAnh)" class="img-thumbnail" width="50" />
                        @(i.MatHang.Ten)
                    </td>
                    <td>@(i.MatHang.GiaBan?.ToString("N0")) đ</td>
                    <td>
                        <form asp-action="capNhatGioHang" method="post">
                            <div class="row">
                                <div class="col">
                                    <input name="id" type="hidden" value="@(i.MatHang.MaMh)" />
                                    <input name="soLuong" type="number" value="@(i.SoLuong)" class="form-control" />
                                </div>
                                <div class="col">
                                    <input class="btn btn-warning" type="submit" value="Cập nhật" />
                                </div>
                            </div>
                        </form>
                    </td>
                    <td>@(thanhtien.ToString("N0")) đ</td>
                    <td>
                        <a asp-action="xoaMatHangTrongGio" asp-route-id="@i.MatHang.MaMh" class="text-danger">Xóa</a>
                    </td>
                </tr>
            }
            <tr>
                <td colspan="4" class="text-end">Thành tiền</td>
                <td colspan="2">
                    <strong class="text-danger">@tongtien.ToString("N0") đ</strong>
                </td>
            </tr>
        </tbody>
    </table>
    <div class="text-end">
        <a class="btn btn-info" asp-action="CheckOut">Thanh toán</a>
    </div>
}
else
{
    <p class="alert alert-danger">Giỏ hàng rỗng!</p>
}



