@model IEnumerable<WebsiteBanHangQuanAoNam.Models.Hoadon>

@{
    ViewData["Title"] = "Index";
}

<h1>QL Hóa Đơn</h1>

<p>
    <a asp-action="Create">Thêm hóa đơn</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ngay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TongTien)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrangThai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaKhNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ngay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TongTien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaKhNavigation.MaKh)
            </td>
            <td>
                    <a Class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@item.MaHd">Sửa</a> |
                    <a Class="btn btn-outline-primary " asp-action="Details" asp-route-id="@item.MaHd">Thông Tin</a> |
                    <a Class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.MaHd">xóa</a>
            </td>
        </tr>
}
    </tbody>
</table>
